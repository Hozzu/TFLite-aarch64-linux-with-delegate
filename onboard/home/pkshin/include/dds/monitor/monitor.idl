      case SERVICE_PARTICIPANT_REPORT_TYPE:
        ServiceParticipantReport sp_report;
      case DOMAIN_PARTICIPANT_REPORT_TYPE:
        DomainParticipantReport dp_report;
      case TOPIC_REPORT_TYPE:
